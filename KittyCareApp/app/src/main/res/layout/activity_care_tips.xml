<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="center_horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Care tips:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="64dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tip_card_background"
            android:text="Provide fresh water daily."
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tip_card_background"
            android:text="Clean the litter box regularly."
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tip_card_background"
            android:text="Feed a balanced diet."
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tip_card_background"
            android:text="Play and spend time daily."
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tip_card_background"
            android:text="Visit the vet regularly."
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/bottomImage"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:src="@drawable/kitten"
            android:contentDescription="Bottom Image" />



    </LinearLayout>
</ScrollView>
